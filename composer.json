{
    "name": "imusicjj/quickpay-php-client",
    "type": "library",
    "description": "PHP-SDK to communicate with the payment provider QuickPay",
    "homepage": "https://github.com/QuickPay/quickpay-php-client",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "QuickPay\\": "QuickPay/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "QuickPay\\Tests\\": "Tests/api/"
        }
    },
    "require-dev" : {
      "phpunit/phpunit": "^9.5",
      "friendsofphp/php-cs-fixer": "^3.2.1",
      "phpstan/phpstan": "^1.1.2",
      "thecodingmachine/phpstan-strict-rules": "^1.0.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
      "sort-packages": true,
      "preferred-install": "dist"
    },
    "scripts": {
      "lint": "php-cs-fixer fix -v",
      "test:lint": "php-cs-fixer fix -v --dry-run",
      "test:types": "phpstan analyse --ansi",
      "test:unit": "phpunit --colors=always",
      "test": [
        "@test:lint",
        "@test:types",
        "@test:unit"
      ],
      "coverage": "@test:unit --coverage"
    }
}
